<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='my-3' >
    <%= form.text_field :first_name, placeholder:'First Name' %>
  </div>

  <div class='my-3' >
    <%= form.text_field :last_name, placeholder:'Last Name' %>
  </div>

  <div class='my-3' >
    <%= form.text_field :email, placeholder:'Email' %>
  </div>

  <div class='my-3' >
    <%= form.text_field :phone, placeholder:'Phone' %>
  </div>

  <div class='my-3' >
    <%= form.text_field :insta, placeholder:'Insta' %>
  </div>

  <div class='my-3' >
    <%= form.number_field :user_id, id: :friends_user_id, value: current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit class:'btn btn-dark' %>
  </div>
<% end %>
